@model Skedl.AuthService.ViewModels.AuthorizationViewModel


@{
    Layout = "_Layout";
}


<div class="container" style="padding-top: 100px">
    <form asp-action="Authorization" asp-controller="Account"  asp-anti-forgery="true">
        <div class="child">
               
            <div class="child-child" style="margin-top: 10px">
                <h1 class="h3 mb-3 font-weight-normal">Авторизация</h1>
            </div>
            
            <div class="child-child" style="margin-top: 10px">
                <input asp-for="Email" type="text" class="form-control" placeholder="Почта"/>
            </div>
    
            <div class="child-child" style="margin-top: 10px">
                <input asp-for="Password" type="password" class="form-control" placeholder="Пароль"/>
            </div>
    
            <div class="child-child" style="margin-top: 10px">
                <button class="btn btn-primary btn-lg mt-6" type="submit">Войти</button>
            </div>
        </div>
    </form>
</div>