<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Skedl.App.Pages.RegPages.MailPage"
             xmlns:viewmodel="clr-namespace:Skedl.App.ViewModels.RegViewModels"
             x:DataType="viewmodel:MailViewModel"
             Title="MailPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Label 
            FontSize="24"
            Text="Введите почту" 
            VerticalOptions="Start" 
            Margin="0,10,0,0" 
            HorizontalOptions="Center"/>

        <Label 
            Grid.Row="1"
            FontSize="14"
            Text="На вашу почту придет код подтверждения" 
            VerticalOptions="Start" 
            Margin="0,10,0,0" 
            HorizontalOptions="Center"/>

        <Entry
            Grid.Row="2"
            Text="{Binding UserEmail}"
            Placeholder="example@gmail.com"
            Margin="20,0,20,0"/>

        <Button 
            Margin="20,0,20,20"
            Text="Далее"
            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MailViewModel}}, Path=NextCommand}"
            Grid.Row="4"/>
    </Grid>
</ContentPage>