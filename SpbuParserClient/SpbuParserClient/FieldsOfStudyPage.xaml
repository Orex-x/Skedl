<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpbuParserClient.FieldsOfStudyPage"
             Title="FieldsOfStudyPage"
             xmlns:viewmodel="clr-namespace:SpbuParserClient.ViewModels"
             xmlns:model="clr-namespace:SpbuParserClient.Models"
             x:DataType="viewmodel:FieldsOfStudyViewModel">
    <Grid>
        <CollectionView ItemsSource="{Binding Items}"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="{x:Type model:BaseLink}">
                    <Grid>
                        <Frame>

                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:FieldsOfStudyViewModel}}, Path=TapCommand}"
                                    CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>

                            <Label Text="{Binding Name}"/>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>